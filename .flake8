[flake8]
max-line-length = 100
extend-ignore = E203, E266, E501, W503
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .mypy_cache,
    htmlcov,
    docs/_build

# Application import order (for import sorting)
application-import-names = src,tests
import-order-style = google
